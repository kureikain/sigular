.row-fluid
	%form#sigular-regex.well{:method => 'POST', :action => 'save'}
		%fieldset
			%legend Your regular expression 
			.control-group
				.input-prepend
					%span.add-on>< &#47; 
					%input.span10{:type => 'text', :placeholder => '', :'name' => 'r'}
					%span.add-on>< &#47;
					%input.input-mini{:type => 'text'}
			.form-action
				%a.btn.btn-primary#more-test 
					%i.icon-plus					
					More Test

		%fieldset#test-string-wrap
			.control-group.test-string.row-fluid		
				.span6
					%textarea{:cols => '3', 'class' => 'span12', :name => 's[]'} huh
				.span6.test-result
					%h6 Result
					%p.masked-string-result	
					%pre.prettyprint.linenums